{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2019",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "types": ["jest", "core-js", "node"],
    "rootDir": "./src",
    "outDir": "./dist/",
    "baseUrl": "./src"
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "dist", "webroot"],
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
