{
  "name": "react-typescript-spa-starter",
  "version": "0.2.1",
  "description": "Starter project for a react/typescript SPA",
  "main": "./src/index.tsx",
  "scripts": {
    "test": "jest",
    "start:dev": "run-p serve:bundle watch:types",
    "start": "npm run start:dev",
    "watch:dev": "run-p watch:bundle watch:types",
    "watch:test": "jest --watch",
    "watch:types": "tsc --noEmit --watch --preserveWatchOutput",
    "watch": "npm run watch:dev",
    "build:dev": "run-s types bundle",
    "build": "run-s types build:ci",
    "build:ci": "webpack --mode production --node-env production",
    "bundle": "webpack --mode development",
    "watch:bundle": "webpack --mode development --watch",
    "serve:bundle": "webpack serve --mode development",
    "types": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "jest",
    "typescript",
    "spa",
    "starter"
  ],
  "author": "Herlander Diogo Pinto (hdpinto@outlook.com)",
  "license": "MIT",
  "dependencies": {
    "bulma": "^0.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@testing-library/react": "^14.0.0",
    "@types/core-js": "^2.5.3",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.14",
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "@webpack-cli/generators": "^3.0.4",
    "autoprefixer": "^9.8.8",
    "babel-loader": "^8.1.0",
    "core-js": "^3.6.5",
    "css-loader": "^3.6.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "mini-css-extract-plugin": "^2.7.6",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.23",
    "postcss-loader": "^7.3.0",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "sass-loader": "^13.3.0",
    "source-map-loader": "^4.0.1",
    "style-loader": "^1.3.0",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^5.0.4",
    "webpack": "^5.84.1",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0",
    "webpack-merge": "^5.0.9",
    "webpackbar": "^5.0.2"
  }
}
